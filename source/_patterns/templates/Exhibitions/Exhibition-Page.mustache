{{> atoms/iconography/svgicons-virtual-exhibitions}}
{{> atoms/iconography/svgicons-user }}
{{> organisms/global/header_v2}}

<div id="desktop_detect"></div>

<main role="main" class="l-page">

  <div class="page_header">
    {{>molecules/virtual-exhibitions/browse-breadcrumb.mustache}}
  </div>

  <div id="maincontent" class="maincontent">
    {{# page_data }}
      <div class="ve-slide-container{{#is_chapter}} ve-chapter{{/is_chapter}}{{#is_exhibition}} ve-exhibition{{/is_exhibition}}">

        {{#is_foyer}}
          <section class="ve-slide first">
            {{#elements}}
              {{#present}}
                {{#items}}
                  {{#is_featured_exhibition}}
                    {{> organisms/virtual-exhibitions/intro-slide}}
                  {{/is_featured_exhibition}}
                {{/items}}
              {{/present}}
            {{/elements}}
          </section>
        {{/is_foyer}}

        {{^is_foyer}}
          {{# elements.present }}
            <h4 class="ve-progress-nav">
              {{# elements.items }}
                {{^ is_section }}
                  {{#is_first}}
                    <a href="#ve-anchor-{{id}}-js"><span class="ve-state-button ve-state-button-on ve-first"></span>{{> templates/Exhibitions/SpeechBubble}}</a>
                  {{/is_first}}
                {{/ is_section }}
              {{/ elements.items }}
              {{# elements.items }}
                {{# is_section }}
                  <a href="#ve-anchor-{{id}}-js"{{#section_title}} title="{{.}}"{{/section_title}}><span class="ve-state-button {{^is_first}}ve-state-button-off{{/is_first}}"></span>{{> templates/Exhibitions/SpeechBubble}}</a>
                {{/ is_section }}
              {{/ elements.items }}
            </h4>

            <section class="ve-slide first">
              {{# elements.items }}
                {{#is_first}}
                  <a class="ve-anchor" id="ve-anchor-{{id}}-js"></a>
                {{/is_first}}
              {{/ elements.items }}
              {{# elements.items }}
                {{> organisms/virtual-exhibitions/main-slide}}
              {{/ elements.items }}
            </section>

          {{/ elements.present }}
          <a id="ve-end"></a>
        </div>

        {{#is_exhibition}}
          <div class="ve-chapter-selection-container">
            <div class="ve-chapter-selection-container-inner cf">
              {{#chapter_elements}}
                {{#present}}
                  {{#items}}
                    {{#is_chapter_nav}}
                      {{> organisms/virtual-exhibitions/chapter-selection}}
                    {{/is_chapter_nav}}
                  {{/items}}
                {{/present}}
              {{/chapter_elements}}
            </div>
            {{> templates/Exhibitions/Next-Prev-Chapter }}
          </div>
        {{/is_exhibition}}
        {{#is_chapter}}
          <div class="ve-chapter-selection-container cf">
            {{> templates/Exhibitions/Next-Prev-Chapter }}
          </div>
        {{/is_chapter}}
      {{/is_foyer}}


      {{#is_foyer}}
        <div class="ve-foyer-card-container cf">
          {{#elements}}
            {{#present}}
              {{#items}}
                {{#is_foyer_card}}
                  {{> organisms/virtual-exhibitions/foyer-card}}
                {{/is_foyer_card}}
              {{/items}}
            {{/present}}
          {{/elements}}
        </div>
      {{/is_foyer}}

    {{/ page_data }}


    {{^is_foyer}}
      {{#social}}
        <div class="ve-social">
          {{#text}}<h2 class="text">{{.}}</h2>{{/text}}
          {{> molecules/controls/share-social }}
        </div>
      {{/social}}
    {{/is_foyer}}

  </div>

</main>
{{> molecules/components/photoswipe/photoswipe }}

{{#is_exhibition}}
  {{> organisms/global/footer }}
{{/is_exhibition}}
{{#is_chapter}}
  {{#footer}}
    <footer class="ve-footer footer" role="contentinfo">
      {{> molecules/navigation/linklist-simple}}
    </footer>
  {{/footer}}
{{/is_chapter}}
