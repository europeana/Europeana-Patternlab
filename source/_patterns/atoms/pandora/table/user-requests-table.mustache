<table class="table-horizontal user-request-table table-sortable">
  <thead>
    <tr>
      <th>ID</th>
      <th>User email</th>
      <th>Organisation</th>
      <th class="sort-date">Request Date</th>
      <th>Request Type</th>
      <th>Request Status</th>
    </tr>
  </thead>
  <tbody>
  {{#request}}
  <tr class="user-request-row clickable-row" data-href={{url}}>
    <td>{{id}}</td>
    <td>{{email}}</td>
    <td>{{organization}}</td>
    <td>{{date}}</td>
    <td class="{{request_type}}">{{type}}</td>
    <td class="{{status_type}}">{{status}}</td>
  </tr>
  {{/request}}
  <tr class="load-more">
    <td colspan="6"><button class="load-more-btn">load more</button></td>
  </tr>
  </tbody>
</table>