{{#login_form}}
  <div class="metis-login-form">
    <form action="{{login_url}}" method="post" role="form" class="login-form">
      <div class="form-header">
        <h2>{{form_title}}</h2>
      </div>
      <div class="messages">
        {{#login_err_authenticate}}
          <div class="error-message"><i class="fa fa-times" aria-hidden="true"></i> {{authentication_error_message}}</div>
        {{/login_err_authenticate}}
      </div>
      <div class="form-fields">
        <fieldset class="form-group">
          <legend class="register-form-header">{{email_field.label}}</legend>
          <input id="email" type='email' name='email' placeholder="{{email_field.placeholder}}"/>
        </fieldset>
        <fieldset class="form-group">
          <legend class="legend-heading">{{password_field.label}}</legend>
          <input id="password" type='password' name='password' placeholder="{{password_field.placeholder}}"/>
        </fieldset>
        <div class="forgot-credentials">
          <p><a href="{{forgot_login_credentials.url}}">{{forgot_login_credentials.text}} </a></p>
        </div>
        <div class="form-group form-group-btns">
          <button class="login-btn" type="submit">{{submit_btn}}</button>
        </div>
      </div>
    </form>
  </div>
{{/login_form}}
