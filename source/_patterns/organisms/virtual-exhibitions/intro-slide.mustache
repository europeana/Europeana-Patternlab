<div id="{{id}}" class="ve-intro ve-base ve-{{id}} {{type}}{{#is_featured_exhibition}} ve-base-foyer-main{{/is_featured_exhibition}}"{{#alchemy_id}} data-alchemy-element="{{.}}"{{/alchemy_id}}>

  {{#image}}
    {{>organisms/virtual-exhibitions/main-slide-bg-style }}
    <picture class="ve-intro-image">
      {{>atoms/images/responsive-srcset-picture}}

      {{#image_credit}}
        <div class="ve-image-credit">
         {{>molecules/text/attribution}}
        </div>
      {{/image_credit}}
    </picture>
  {{/image}}

  {{#disabled}}
  {{#is_first}}
    {{#is_exhibition}}
      <div class="brand-circles">
        <div class="scaling-svg-container">
          <svg preserveAspectRatio="xMidYMin slice" viewBox="300 860 300 300">
            <path d="M600,860h-31.6c0,148.1-120.3,268.4-268.4,268.4v31.6C465.3,1160,600,1025.3,600,860z"/>
            <path d="M547,860h-31.6c0,118.9-96.8,215.4-215.4,215.4v31.6C436.1,1107,547,996.1,547,860z"/>
            <path d="M493.8,860h-31.6c0,89.5-72.7,162.2-162.2,162.2v31.6C407,1053.8,493.8,966.7,493.8,860z"/>
            <path d="M440.8,860h-31.6c0,60-48.9,109.2-109.2,109.2v31.6C377.6,1000.8,440.8,937.6,440.8,860z"/>
            <path d="M387.8,860h-31.6c0,30.9-25.3,56.2-56.2,56.2v31.6C348.4,947.8,387.8,908.4,387.8,860z"/>
          </svg>
        </div>
      </div>
    {{/is_exhibition}}
  {{/is_first}}
  {{/disabled}}

</div>
<div class="ve-base ve-base-intro-texts">

  {{#image_credit}}
    <div class="ve-image-credit">
     {{>molecules/text/attribution}}
    </div>
  {{/image_credit}}

  {{#title}}
  <div class="ve-title-group">
      <span class="ve-title">
        {{.}}
      </span>
    {{#subtitle}}
      <span class="ve-subtitle">
        {{{.}}}
      </span>
    {{/subtitle}}
  </div>
  {{/title}}

  {{#intro_description}}
    <div class="ve-description">
      {{{.}}}
    </div>
  {{/intro_description}}

  <div class="ve-branding">
    {{#label}}
      <span class="ve-label">{{.}}</span>
    {{/label}}

    {{#partner_image}}
      <a class="ve-partner-logo" href="{{partner_url}}"><img src="{{thumbnail.url}}"></a>
    {{/partner_image}}
  </div>
</div>

{{#full_description}}
  <div class="ve-base-text ve-intro-full-description">
    {{{.}}}
  </div>
{{/full_description}}